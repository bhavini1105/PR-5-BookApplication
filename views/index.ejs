<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet"
    integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
  <title>Home</title>
  <style>
    body {
      background-color: #f8f9fa;
      font-family: 'Roboto', sans-serif;
      margin: 0;
      padding: 0;
    }

    nav {
      background-color: #343a40;
      color: #fff;
      padding: 15px 30px;
      box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
      text-align: center;
    }

    nav h2 {
      margin: 0;
      font-size: 2rem;
    }

    .carousel-item img {
      height: 450px;
      object-fit: cover;
      background-position: center;
    }

    .carousel-caption {
      padding: 15px;
      border-radius: 5px;
    }

    .carousel-caption h5,
    .carousel-caption p {
      font-size: 1.5rem;
      color: #fff;
      font-weight: bold;
      text-shadow: 2px 2px 5px rgba(0, 0, 0, 0.7);
    }

    .card {
      border: none;
      transition: transform 0.3s ease, box-shadow 0.3s ease;
      border-radius: 8px;
      background-color: #fff;
      overflow: hidden;
      box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
    }

    .card:hover {
      transform: translateY(-5px);
      box-shadow: 0 8px 15px rgba(0, 0, 0, 0.2);
    }

    .card img {
      height: 250px;
      object-fit: cover;
    }

    .badge-new {
      position: absolute;
      top: 10px;
      left: 10px;
      background-color: red;
      color: white;
      padding: 5px 10px;
      border-radius: 5px;
      font-size: 0.8rem;
    }

    .badge-bestseller {
      position: absolute;
      top: 10px;
      left: 10px;
      background-color: #28a745;
      color: white;
      padding: 5px 10px;
      border-radius: 5px;
      font-size: 0.8rem;
    }

    .section-title {
      font-size: 2rem;
      font-weight: bold;
      color: #212529;
      margin-bottom: 30px;
    }

    .btn {
      transition: background-color 0.3s ease;
    }

    /* Buy Now button */
    .btn-success {
      background-color: #007bff;
      color: #fff;
      border: none;
    }

    .btn-success:hover {
      background-color: #0056b3;
    }

    /* View Details button */
    .btn-info {
      background-color: #fd7e14;
      color: #fff;
      border: none;
    }

    .btn-info:hover {
      background-color: #d66a0d;
    }

    .card-body {
      padding: 1.2rem;
    }

    .card-text {
      font-size: 1rem;
      color: #6c757d;
    }

    .card-title {
      font-size: 1.2rem;
      font-weight: bold;
      color: #343a40;
    }
  </style>
</head>

<body>

  <nav class="navbar navbar-expand-lg sticky-top">
    <div class="container-fluid">
        <h2>Book Store</h2>
    </div>
</nav>

  <div id="bookCarousel" class="carousel slide mt-5" data-bs-ride="carousel">
    <div class="carousel-inner">
      <div class="carousel-item active">
        <img src="/assets/images/img4.jpg" class="d-block w-100" alt="Dr. A.P.J. Abdul Kalam" />
        <div class="carousel-caption d-none d-md-block">
          <h5>Dr. A.P.J. Abdul Kalam</h5>
          <p>Manasvi Vohra</p>
        </div>
      </div>
      <div class="carousel-item">
        <img src="/assets/images/img9.jpg" class="d-block w-100" alt="Mahabharat" />
        <div class="carousel-caption d-none d-md-block">
          <h5>Mahabharat</h5>
          <p>Ved Vyasa</p>
        </div>
      </div>
      <div class="carousel-item">
        <img src="/assets/images/img2.jpg" class="d-block w-100" alt="Ramayan" />
        <div class="carousel-caption d-none d-md-block">
          <h5>Ramayan</h5>
          <p>Valmiki</p>
        </div>
      </div>
    </div>
    <button class="carousel-control-prev" type="button" data-bs-target="#bookCarousel" data-bs-slide="prev">
      <span class="carousel-control-prev-icon" aria-hidden="true"></span>
    </button>
    <button class="carousel-control-next" type="button" data-bs-target="#bookCarousel" data-bs-slide="next">
      <span class="carousel-control-next-icon" aria-hidden="true"></span>
    </button>
  </div>

  <% let staticBooks=[ { bookName: "Mahabharat" , author: "Author A" , price: 10, imageUrl: "/assets/images/img1.jpg" },
    { bookName: "Sardar Patel" , author: "Author B" , price: 12, imageUrl: "/assets/images/img3.jpg" }, {
    bookName: "Ramayan" , author: "Author C" , price: 15, imageUrl: "/assets/images/img2.jpg" }, {
    bookName: "Wings of Fire " , author: " A.P.J. Abdul Kalam" , price: 20, imageUrl: "/assets/images/img4.jpg" } ]; %>

    <section class="container my-5">
      <h3 class="section-title"> Best Seller Books</h3>
      <div class="row">
        <% if (bestSeller.length> 4) { %>
          <% bestSeller.slice(0, 4).forEach((book)=> { %>
            <div class="col-md-3 mb-4">
              <div class="card">
                <span class="badge-bestseller">Best Seller</span>
                <img src="<%= book.imageUrl %>" class="card-img-top" alt="<%= book.bookName %>" />
                <div class="card-body">
                  <h5 class="card-title text-primary">
                    <%= book.bookName %>
                  </h5>
                  <p class="card-text text-muted">by <%= book.author %>
                  </p>
                  <p class="card-text"><strong>Price:</strong> $<%= book.price %>
                  </p>
                  <p class="card-text text-truncate">
                    <%= book.description %>
                  </p>
                  <div class="d-flex justify-content-between">
                    <a href="#" class="btn btn-success">Buy Now</a>
                    <a href="#" class="btn btn-info">View Details</a>
                  </div>
                </div>
              </div>
            </div>
            <% }) %>
              <% } else { %>
                <% staticBooks.forEach((book)=> { %>
                  <div class="col-md-3 mb-4">
                    <div class="card">
                      <span class="badge-bestseller">Best Seller</span>
                      <img src="<%= book.imageUrl %>" class="card-img-top" alt="<%= book.bookName %>" />
                      <div class="card-body">
                        <h5 class="card-title text-primary">
                          <%= book.bookName %>
                        </h5>
                        <p class="card-text text-muted">by <%= book.author %>
                        </p>
                        <p class="card-text"><strong>Price:</strong> $<%= book.price %>
                        </p>
                        <div class="d-flex justify-content-between">
                          <a href="#" class="btn btn-success">Buy Now</a>
                          <a href="#" class="btn btn-info">View Details</a>
                        </div>
                      </div>
                    </div>
                  </div>
                  <% }) %>
                    <% } %>
      </div>
    </section>


    <% let staticCollectionBooks=[ { bookName: "The Vishnu Purana" , author: " Vyasa" , price: 10,
      imageUrl: "/assets/images/img5.jpg" }, { bookName: "Panchtantra" , author: "Vishnu Sharma" , price: 12,
      imageUrl: "/assets/images/img8.jpg" }, { bookName: "Shiva Purana" , author: " Vyasa" , price: 15,
      imageUrl: "/assets/images/img6.jpg" }, { bookName: "Kamayani " , author: "Jaishankar Prasad" , price: 20,
      imageUrl: "/assets/images/img7.jpg" } ]; %>

      <section class="container my-5">
        <h3 class="section-title"> New Collection Books</h3>
        <div class="row">
          <% if (newCollection.length> 4) { %>
            <% newCollection.slice(0, 4).forEach((book)=> { %>
              <div class="col-md-3 mb-4">
                <div class="card">
                  <span class="badge-bestseller">New Collection</span>
                  <img src="<%= book.imageUrl %>" class="card-img-top" alt="<%= book.bookName %>" />
                  <div class="card-body">
                    <h5 class="card-title text-primary">
                      <%= book.bookName %>
                    </h5>
                    <p class="card-text text-muted">by <%= book.author %>
                    </p>
                    <p class="card-text"><strong>Price:</strong> $<%= book.price %>
                    </p>
                    <div class="d-flex justify-content-between">
                      <a href="#" class="btn btn-success">Buy Now</a>
                      <a href="#" class="btn btn-info">View Details</a>
                    </div>
                  </div>
                </div>
              </div>
              <% }) %>
                <% } else { %>
                  <% staticCollectionBooks.forEach((book)=> { %>
                    <div class="col-md-3 mb-4">
                      <div class="card">
                        <span class="badge-bestseller">New Collection</span>
                        <img src="<%= book.imageUrl %>" class="card-img-top" alt="<%= book.bookName %>" />
                        <div class="card-body">
                          <h5 class="card-title text-primary">
                            <%= book.bookName %>
                          </h5>
                          <p class="card-text text-muted">by <%= book.author %>
                          </p>
                          <p class="card-text"><strong>Price:</strong> $<%= book.price %>
                          </p>
                          <div class="d-flex justify-content-between">
                            <a href="#" class="btn btn-success">Buy Now</a>
                            <a href="#" class="btn btn-info">View Details</a>
                          </div>
                        </div>
                      </div>
                    </div>
                    <% }) %>
                      <% } %>
        </div>
      </section>



      <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM"
        crossorigin="anonymous"></script>

</body>

</html>